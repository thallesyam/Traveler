generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider          = "mysql"
  url               = env("DATABASE_URL")
  shadowDatabaseUrl = env("SHADOW_DATABASE_URL")
  relationMode      = "prisma"
}

model User {
  id       String @id @default(uuid())
  name     String
  email    String @unique
  password String

  createdAt DateTime @default(now()) @db.DateTime(3)
}

model City {
  id          String  @id @default(uuid())
  name        String
  slug        String
  images      Json
  description String
  locals      Local[]

  createdAt DateTime @default(now()) @db.DateTime(3)
}

model Local {
  id           String   @id @default(uuid())
  name         String
  slug         String
  description  String
  images       Json
  address      Json
  openingHours Json
  rating       Float
  observation  String?
  isHightlight Boolean? @db.TinyInt
  categoryId   String
  cityId       String

  category Category? @relation(fields: [categoryId], references: [id])
  city     City?     @relation(fields: [cityId], references: [id])
  comment  Comment[]

  createdAt DateTime @default(now()) @db.DateTime(3)

  @@index([categoryId])
  @@index([cityId])
}

model Category {
  id    String @id @default(uuid())
  name  String
  image String

  local Local[]

  createdAt DateTime @default(now()) @db.DateTime(3)
}

model Comment {
  id     String   @id @default(uuid())
  name   String
  image  String
  text   String
  rating Float
  status Boolean? @db.TinyInt

  local     Local?   @relation(fields: [localId], references: [id])
  localId   String?
  createdAt DateTime @default(now()) @db.DateTime(3)

  @@index([localId])
}
